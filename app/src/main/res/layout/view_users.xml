            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_margin="10dp"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>